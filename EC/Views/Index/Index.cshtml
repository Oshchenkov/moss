@using EC.Models.Database
@using Resources = EC.Localization.Resources
@{

    bool? is_cc = ViewBag.is_cc;
    if (!is_cc.HasValue)
    {
        is_cc = false;
    }
    String class_ext = ViewBag.cc_extension;
    //bool? is_cc = true;
    //String class_ext = "";
