            <div id="buttonStart"><span class="buttonStartText">@Resources.GetString("Start", is_cc).ToUpper()</span></div>
            <ul id="dropDownList" style="display: none">
            </ul>
        </div>
    </div>
</div><!--end topBody-->
<div id="bottomBody@{@class_ext}">

    <div class="fourthTitle">
        @Resources.GetString("DontSilentBystander")
    </div>
    <div class="icons">
        <div class="centerBlock">
            <div class="itemBlock">
                <div class="empty"></div>
                <div class="positionIcons">
                    <div id="firstIcon"></div>
                </div>
                <span class="title">@Resources.GetString("ActEarly"),<br />@Resources.GetString("ActEthically")</span><br />
